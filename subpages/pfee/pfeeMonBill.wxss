page {
  height: 100%;
}
.topfixed {
  position: fixed;
  width: 100%;
  margin-top: 1px;
}

.cellRow0 {
  display: flex;
  flex-direction: row;
  font-size: 14px;
  padding: 0px 6px 0px 16px;
  background-color: white;
  height: 88rpx;
  line-height: 88rpx;
  justify-content: space-between;
}

.cellRow0 .right-container {
  display: flex;
  flex-direction: row;
  /* background-color: blue; */
  width: 80%;
  justify-content: flex-end;
}

.line {
  width: 100%;
  height: 1px;
  background-color: #f2f2f2;
}

.scroll-height {
  position: fixed;
  top: 178rpx;
  display:flex;
  flex-direction: column;
  height: calc(100% - 196rpx);
  width: calc(100% - 60rpx);
  margin: 0rpx;
  padding: 0rpx;
}

