/* 按钮未选中 */
.normal_button{
  margin-left: 10rpx;

  background: white;
  width: 100rpx;

  color: #777777;
  text-align: center;
  font-size: 26rpx;
 
  overflow:hidden; 
  text-overflow:ellipsis;
  white-space:nowrap; 
